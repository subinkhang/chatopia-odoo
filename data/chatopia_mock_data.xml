<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data noupdate="1">

        <!-- === Partner Mẫu (Giữ nguyên) === -->
        <record id="mock_partner_alice" model="res.partner">
            <field name="name">Alice Wonderland</field>
            <field name="email">alice.test@example.com</field>
        </record>
        <record id="mock_partner_bob" model="res.partner">
            <field name="name">Bob The Builder</field>
            <field name="email">bob.test@example.com</field>
        </record>
        <record id="mock_partner_charlie" model="res.partner">
            <field name="name">Charlie Chaplin</field>
            <field name="email">charlie.test@example.com</field>
        </record>
        <record id="mock_partner_visitor" model="res.partner">
            <field name="name">Visitor 123</field>
            <field name="email">visitor123@unknown.example</field>
        </record>

        <!-- === Conversation Mẫu (THÊM GIÁ TRỊ CHO field name) === -->
        <record id="mock_conv_alice" model="chatopia.conversation">
            <field name="name">Alice Wonderland</field> <!-- << Gán tên trực tiếp -->
            <field name="contact_id" ref="mock_partner_alice"/>
            <field name="inbox_name">Primary Inbox</field>
        </record>

        <record id="mock_conv_bob" model="chatopia.conversation">
            <field name="name">Bob The Builder</field> <!-- << Gán tên trực tiếp -->
            <field name="contact_id" ref="mock_partner_bob"/>
            <field name="inbox_name">Support Inbox</field>
        </record>

         <record id="mock_conv_charlie" model="chatopia.conversation">
            <field name="name">Charlie Chaplin</field> <!-- << Gán tên trực tiếp -->
            <field name="contact_id" ref="mock_partner_charlie"/>
            <field name="inbox_name">Primary Inbox</field>
        </record>

        <record id="mock_conv_visitor" model="chatopia.conversation">
             <!-- Nếu không link contact_id, phải set sender_name và name -->
             <field name="name">Visitor 123 From Web</field> <!-- << Gán tên trực tiếp -->
             <!-- <field name="contact_id" ref="mock_partner_visitor"/> --> <!-- Bỏ comment nếu muốn link -->
             <field name="sender_name">Visitor 123 From Web</field>
             <field name="inbox_name">Website Chat</field>
        </record>

        <!-- === Message Mẫu (Giữ nguyên, nhưng sửa lại created_at của Charlie) === -->
        <record id="mock_msg_alice_1" model="chatopia.message">
            <field name="conversation_id" ref="mock_conv_alice"/>
            <field name="content">Hello there! Can you help me?</field>
            <field name="message_type">user</field>
            <field name="created_at">2024-03-28 10:00:00</field>
            <field name="is_read" eval="True"/>
        </record>
        <record id="mock_msg_alice_2" model="chatopia.message">
            <field name="conversation_id" ref="mock_conv_alice"/>
            <field name="content">Hi Alice, how can I assist you today?</field>
            <field name="message_type">admin</field>
            <field name="created_at">2024-03-28 10:01:00</field>
            <field name="is_read" eval="True"/>
        </record>
         <record id="mock_msg_alice_3" model="chatopia.message">
            <field name="conversation_id" ref="mock_conv_alice"/>
            <field name="content">I have a question about my last order.</field>
            <field name="message_type">user</field>
            <field name="created_at">2024-03-29 09:30:00</field>
            <field name="is_read" eval="False"/>
        </record>
        <record id="mock_msg_alice_4" model="chatopia.message">
            <field name="conversation_id" ref="mock_conv_alice"/>
            <field name="content">And another thing...</field>
            <field name="message_type">user</field>
             <field name="created_at">2024-03-29 09:31:00</field>
            <field name="is_read" eval="False"/>
        </record>

        <record id="mock_msg_bob_1" model="chatopia.message">
            <field name="conversation_id" ref="mock_conv_bob"/>
            <field name="content">Can we fix it?</field>
            <field name="message_type">user</field>
            <field name="created_at">2024-03-27 15:00:00</field>
            <field name="is_read" eval="True"/>
        </record>
        <record id="mock_msg_bob_2" model="chatopia.message">
            <field name="conversation_id" ref="mock_conv_bob"/>
            <field name="content">Yes, we can!</field>
            <field name="message_type">admin</field>
            <field name="created_at">2024-03-27 15:01:00</field>
            <field name="is_read" eval="True"/>
        </record>

        <record id="mock_msg_charlie_1" model="chatopia.message">
            <field name="conversation_id" ref="mock_conv_charlie"/>
            <field name="content">A day without laughter is a day wasted.</field>
            <field name="message_type">user</field>
            <field name="created_at">2024-03-31 09:45:00</field> <!-- << Sửa thành ngày giờ tĩnh gần đây -->
            <field name="is_read" eval="False"/>
        </record>

         <record id="mock_msg_visitor_1" model="chatopia.message">
            <field name="conversation_id" ref="mock_conv_visitor"/>
            <field name="content">Need help with pricing.</field>
            <field name="message_type">user</field>
            <field name="created_at">2024-03-29 11:00:00</field>
            <field name="is_read" eval="False"/>
        </record>

    </data>
</odoo>