<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Conversation 1: Từ Facebook -->
    <record id="chat_conversation_1" model="chatopia.conversation">
        <field name="name">Conversation 1</field>
        <field name="inbox">Facebook</field>
    </record>
    <record id="chat_message_1" model="chatopia.message">
        <field name="conversation_id" ref="chat_conversation_1"/>
        <field name="sender">User 1</field>
        <field name="content">Hello, this is a message.</field>
    </record>
    <record id="chat_message_2" model="chatopia.message">
        <field name="conversation_id" ref="chat_conversation_1"/>
        <field name="sender">User 2</field>
        <field name="content">Hi User 1! How are you?</field>
    </record>
    <record id="chat_message_3" model="chatopia.message">
        <field name="conversation_id" ref="chat_conversation_1"/>
        <field name="sender">User 1</field>
        <field name="content">I'm good, thanks! How about you?</field>
    </record>

