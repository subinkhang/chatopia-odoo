        <field name="content">Hey, are you free this weekend?</field>
    </record>
    <record id="chat_message_5" model="chatopia.message">
        <field name="conversation_id" ref="chat_conversation_2"/>
        <field name="sender">User 4</field>
        <field name="content">Yes, I am! Let's plan something.</field>
    </record>

